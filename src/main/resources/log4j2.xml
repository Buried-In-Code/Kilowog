<Configuration>
    <Properties>
        <Property name="colours">FATAL=magenta, ERROR=red, WARN=yellow, INFO=white, DEBUG=blue</Property>
    </Properties>

    <Appenders>
        <Console name="Console">
            <PatternLayout disableAnsi="false" pattern="{%highlight{%logger{2}}{${colours}}} | %highlight{%msg}{${colours}}%n" />
            <ThresholdFilter level="WARN" onMatch="ACCEPT" onMismatch="DENY"/>
        </Console>
        <RollingFile name="RollingFile" fileName="logs/kilowog.log" filePattern="logs/kilowog-%i.log">
            <PatternLayout pattern="[%date{yyyy-MM-dd HH:mm:ss}] [%-5level] {%logger{2}} | %msg%n%throwable"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="25MB"/>
            </Policies>
            <DefaultRolloverStrategy fileIndex="min" max="3"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="RollingFile"/>
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>